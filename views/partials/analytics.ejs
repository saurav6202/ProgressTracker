<style>
    .analytics-section {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .analytics-card {
        background: #fff;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: var(--shadow);
        border: 1px solid var(--gray);
    }

    .analytics-card h3 {
        margin-bottom: 1rem;
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--dark-gray);
    }

    .analytics-card canvas {
        width: 100% !important;
        height: 20rem !important;
    }

    .analytics-card #goalChart {
        width: 28rem !important;
        height: 28rem !important;
        display: block;
        margin: 0 auto;
    }

    .goal-progress-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: space-evenly;
        margin-top: 30px;
    }

    .goal-card {
        width: 160px;
        padding: 10px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        text-align: center;
        border: 1px solid var(--gray);
    }

    .goal-card canvas {
        width: 100%;
        height: 100%;
        max-height: 130px;
    }

    .goal-card p {
        margin-top: 10px;
        font-weight: 500;
        font-size: 14px;
        color: #2d3436;
    }

    .chart-wrapper {
        overflow-x: auto;
        width: 100%;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .chart-wrapper canvas {
        min-width: 300px;
    }

    .chart-wrapper::-webkit-scrollbar {
        display: none;
    }
</style>

<div class="card fade-in goalBody">
    <div class="card-header">
        <h2 class="card-title">Analytics</h2>
    </div>

    <div class="analytics-section">
        <!-- Goal Performance -->
        <div class="card analytics-card flexdiv">
            <h3>Goal Performance</h3>
            <div class="goal-progress-grid" id="goalProgressGrid">
            </div>
        </div>

        <!-- Task Completion Rate -->
        <div class="card analytics-card">
            <h3>Task Completion Rate</h3>
            <div class="chart-wrapper">
                <canvas id="taskChart"></canvas>
            </div>
        </div>

        <!-- Mood Trends -->
        <div class="card analytics-card">
            <h3>Mood Trends</h3>
            <div class="chart-wrapper">
                <canvas id="moodChart"></canvas>
            </div>
        </div>


    </div>
</div>