<style>
    .goal-section {
        margin-top: 1rem;
    }

    .add-goal-btn {
        background-color: var(--primary);
        color: var(--white);
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        margin-bottom: 1.5rem;
        transition: var(--transition);
    }

    .add-goal-btn:hover {
        background-color: #5649c0;
    }

    .goal-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .goal-item {
        flex-direction: column;
        border: 2px solid red;
        background-color: var(--light);
        padding: 1rem;
        border: 1px solid var(--gray);
        border-radius: 10px;
        box-shadow: var(--shadow);
        transition: var(--transition);
    }

    .goal-item:hover {
        transform: translateY(-3px);
    }

    .goal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.8rem;
        width: 100%;
    }

    .goal-title {
        font-weight: 600;
        font-size: 1.05rem;
        color: var(--dark-gray);
    }

    .goal-actions {
        display: flex;
        gap: 0.5rem;
    }

    .goal-actions button {
        background: none;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        color: var(--primary);
        transition: var(--transition);
    }

    .goal-actions button:hover {
        color: var(--secondary);
        transform: scale(1.1);
    }

    .goal-progress {
        margin-top: 0.5rem;
        width: 100%;
    }

    .progress-bar {
        width: 100%;
        height: 10px;
        background-color: var(--gray);
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 0.3rem;
    }

    .progress-fill {
        height: 100%;
        background-color: var(--primary);
        transition: width 0.4s ease-in-out;
    }

    .progress-text {
        font-size: 0.85rem;
        color: var(--dark-gray);
        font-weight: 500;
    }

    #saveGoalBtn {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        margin-right: 0.5rem;
        transition: var(--transition);
    }

    #cancelGoalBtn {
        background-color: transparent;
        color: var(--dark-gray);
        border: 1px solid var(--gray);
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
    }

    #saveGoalBtn:hover {
        background-color: #5649c0;
    }

    #cancelGoalBtn:hover {
        color: var(--primary);
        border-color: var(--primary);
    }

    .goal-card {
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        width: fit-content;
        margin-bottom: 1rem;
        /* max-width: 600px; */
        /* margin: auto; */
    }

    .goalForm.hidden {
        display: none;
    }

    #goalForm {
        display: flex;
        gap: 0.5rem;
        /* margin-bottom: 1rem; */
    }

    #goalForm input {
        flex: 1;
        padding: 0.7rem 1rem;
        border: 1px solid var(--gray);
        border-radius: 6px;
        font-size: 1rem;
        transition: var(--transition);
    }

    #goalForm input[type="number"] {
        width: 5rem;
    }

    #goalForm input:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(108, 92, 231, 0.2);
        outline: none;
    }

    #goalForm button {
        font-size: 2rem;
        padding: 0;
        height: 3rem;
        width: 3rem;

    }

    .goal-list {
        list-style: none;
        padding: 0;
    }

    .goal-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        background-color: var(--white);
        border: 1px solid var(--gray);
        border-radius: 6px;
        margin-bottom: 0.5rem;
        transition: var(--transition);
    }

    .goal-actions button {
        background: none;
        border: none;
        cursor: pointer;
        color: var(--primary);
        font-weight: bold;
        margin-left: 0.5rem;
    }

    .goal-actions button:hover {
        color: var(--secondary);
    }

    .goal-item.editing input {
        flex: 1;
        margin-right: 1rem;
    }
</style>


<div class="card fade-in goalBody">
    <div class="card-header">
        <h2 class="card-title">Your Goals</h2>
    </div>

    <div class="goal-section">
        <button class="add-goal-btn">+ Add New Goal</button>

        <div class="card goal-card goalForm hidden">
            <form id="goalForm">
                <input type="text" id="goalInput" placeholder="Enter your goal..." required />
                <input type="number" id="goalDays" placeholder="Days" min="1" required />
                <button type="submit" class="save-btn saveGoalBtn">+</button>
            </form>
        </div>


        <div class="goal-list" id="goalList"></div>
    </div>
</div>
<div id="editGoalModal" class="modal hidden">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h3>Edit Goal</h3>
        <form id="editGoalForm">
            <input type="hidden" id="editGoalId" />
            <input type="text" id="editGoalInput" placeholder="Edit goal..." required />
            <input type="number" id="editGoalDays" placeholder="Days" min="1" required />
            <button type="submit" class="save-btn">Update</button>
        </form>
    </div>
</div>